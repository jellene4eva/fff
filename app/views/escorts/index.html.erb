<p id="notice"><%= notice %></p>

<h1>Listing Escorts</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Description</th>
      <th>Rate per hour in cents</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @escorts.each do |escort| %>
      <tr>
        <td><%= escort.name %></td>
        <td><%= escort.age %></td>
        <td><%= escort.description %></td>
        <td><%= escort.rate_per_hour_in_cents %></td>
        <td><%= link_to 'Show', escort %></td>
        <td><%= link_to 'Edit', edit_escort_path(escort) %></td>
        <td><%= link_to 'Destroy', escort, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

